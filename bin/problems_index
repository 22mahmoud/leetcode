#!/bin/bash

base_dir="problems"
final_content=""
temp_file=$(mktemp)
sorted_file=$(mktemp)

for filename in $(ls "$base_dir" | sort -n); do
  if [ -d "$base_dir/$filename" ]; then
    title=$(yq --front-matter=extract '.title-prefix' "$base_dir/$filename/index.md")
    id=$(yq --front-matter=extract '.id' "$base_dir/$filename/index.md")
    date=$(yq --front-matter=extract '.date' "$base_dir/$filename/index.md")

    echo "$date|$id|$title|$filename" >>"$temp_file"
  fi
done

sort "$temp_file" >"$sorted_file"
sort "$temp_file" > sorted

while IFS="|" read -r date id title filename; do
  final_content=$(printf "%s\n%s" "- [$id. $title]($filename)" "$final_content")
done <"$sorted_file"


cat <<EOF >problems/index.md
---
title-prefix: Leetcode - Problems
---

# Leetcode Problems

$(printf "%s" "$final_content")
EOF
